{{#if addNewAnnouncement}}
  <h1>Add New Announcement</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="body">Body</label>
          {{input value=body id="body"}}
        </div>

        <button {{action 'saveAnnouncement1'}}>Save</button>
      </form>
    </div>
 {{else}}
    <button {{action 'newAnnouncementShow'}}>New Announcement</button>
{{/if}}
